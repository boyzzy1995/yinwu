/* pages/classify/classify.wxss */
.topImgView{
  width: 100%;
}
.topImg {
  width: 750rpx;
  height: 300rpx;
}
.contentView{
  margin-top: 15rpx;
}
/*新增优惠券view*/
.Coupon-view{
  padding:0 20rpx 20rpx 20rpx;
}
.Coupon{
  position: relative;
  border: 1px solid #f2f2f2;
  height: 180rpx;
  box-shadow: 0 10px 20px 0 rgba(0,0,0,.04);
  font-family: "Microsoft YaHei";
  background: #fff;
  background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 650rpx center ;
}
.img-view{
   float: left;
    width: 138rpx;
    height: 138rpx;
    margin: 20rpx;
    border: 1px solid #f1f2f6;
    transition: all .2s ease-in-out,opacity 1s;
}
.img-view image{
  width: 138rpx;
  height: 138rpx;
}
.functional{
  position: relative;
    float: left;
    z-index: 2;
    width: 500rpx;
    height: auto;
    padding: 50rpx 0 0 0;
    color: #333;
    outline: 0;
}
.price{
    width: 300rpx;
    height: 45rpx;
    margin-bottom: 5px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.price em{
    display: inline-block;
    font: 400 16px arial;
    vertical-align: top;
    margin: 3px 3px 0 0;
    color: #f23030;
}
.price strong{
    display: inline-block;
    font: 400 35rpx arial;
    vertical-align: top;
    color: #ff4200;
}
.price span{
  display: inline-block;
    font-size: 12px;
    margin: 12px 0 0 10px;
    vertical-align: top;
    color: #f23030;
    padding: 0 5px;
    background: #fff4ec;
}
.range{
    line-height: 18px;
     overflow: hidden; 
    font-size: 12px;
    font-weight: 700;
    cursor: default;
    padding-bottom:5rpx;
     white-space: nowrap; 
     text-overflow:ellipsis; 
     width: 400rpx;
}
.progress span{
    float: left;
    margin-right: 5px;
    cursor: default;
    font-size: 12px;
    font-weight: 700;
}
.progress progress{
  padding-top:5px;
}
.receive{
 position: absolute;
    top: 0;
    right: 0;
    width: 160rpx;
    height:180rpx;
    background-color: #fb0f3a;
    
}
.inner-receive{
  width: 160rpx;
  height: 180rpx;
  border-left: 1px #333 dashed;
  margin-left: -1px;
}
.inner-receive text{
    position: relative;
    display: block;
    margin: 0 auto;
    width: 160rpx;
    height: 70%;
    line-height: 44rpx;
    text-align: center;
    font-size: 14px;
    color: #fff;
    top: 70rpx;
}
.text-view-container{
  padding: 0 30rpx;
  font-size: 32rpx;
}
.text-view{
  display: flex;
  padding: 0 20rpx 20rpx 20rpx;
}
.left-text{
  width: 30%;
  text-align: center;
}
.right-text{
  width: 60%;
  text-align: center;
}
.show-img{
  text-align: center;
}
.show-img image{
  width: 100%;
  height: 400rpx;
}
.xyx-img{
  height: 300rpx;
  width: 100%;
}
.bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.bottom-tip{
  font-size: 24rpx;
  color: #666;
  text-align: center;
  padding-bottom: 20rpx;
}