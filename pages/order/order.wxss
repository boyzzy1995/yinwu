page {
  background-color: #eee;
}

.container {
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
  font-size: 26rpx;
  padding: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  align-items: center;
  background: #fff;
  width: 750rpx;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}

.version {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  padding: 40rpx;
}

.my-item {
  width: 100%;
  background-size: 16rpx auto, 750rpx;
  border-bottom: 1px solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  font-weight: 500;
  background-color: #fff;
}

.my-item image {
  padding-top: 20rpx;
  padding-right: 20rpx;
  float: left;
}

.my-item view {
  float: left;
}

.my-item navigator {
  height: 100rpx;
  font-size: 30rpx;
}

.about {
  width: 100%;
  background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 750rpx center;
  background-size: 16rpx auto, 750rpx auto;
  margin: 20rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 100rpx;
}

.my-item-icon {
  width: 100%;
  height: 130rpx;
  margin: 0;
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.my-item-icon image {
  height: 50rpx;
  width: 50rpx;
}

.iconsChecked {
  width: 25%;
  font-size: 24rpx;
  text-align: center;
}

.iconsChecked image {
  height: 75rpx;
  width: 75rpx;
  margin: 0 50rpx;
}

.icons {
  width: 20%;
  font-size: 24rpx;
  text-align: center;
}

.inputView {
  display: flex;
  width: 90%;
  box-sizing: border-box;
  padding: 20rpx;
  margin-left: 5%;
  border-bottom: 1px rgb(241, 241, 241) solid;
  align-items: center;
  margin-right: 5%;
}

.inputView image {
  width: 150rpx;
  height: 150rpx;
}

.inputView .img {
  width: 35%;
}

.inputView text {
  width: 35%;
}

.inputView text:nth-child(2) {
  width: 65%;
}

.inputView input {
  width: 65%;
}

.inputView .text {
  width: 65%;
  height: 150rpx;
}

.inputView .text .child {
  width: 100%;
  height: 50rpx;
}

.countView {
  display: flex;
  width: 90%;
  box-sizing: border-box;
  padding: 20rpx;
  margin-left: 5%;
  margin-right: 5%;
  align-items: center;
}

.countView text {
  width: 45%;
  color: red;
}

.countView .btnView {
  width: 80%;
  display: block;
}

.countView .btnView button {
  font-size: 30rpx;
}

.words {
  width: 90%;
  margin: 0 5%;
  color: #999;
  padding: 10rpx 0;
}

.emptyWords {
  text-align: center;
  padding-top: 100px;
  color: #999;
}

.viewBox {
  width: 100%;
  background-color: #eee;
}

.ifBox {
  background-color: #fff;
  border-radius: 10px;
  margin:0 20rpx 20rpx 20rpx;
}
