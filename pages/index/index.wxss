/* pages/index/index.wxss */

page {
  font-size: 30rpx;
  font-family: Arial, Helvetica, sans-serif;
  height: 100%;
}

.inputView {
  display: flex;
  width: 90%;
  box-sizing: border-box;
  padding: 20rpx;
  margin-left: 5%;
  border-bottom: 1px rgb(241, 241, 241) solid;
  align-items: center;
}

.inputView:nth-child(1) {
  margin-top: 30rpx;
}

.inputView text {
  width: 25%;
}

.inputView input {
  /* border-bottom: 1px solid #666; */
  width: 75%;
}

.inputView:nth-child(4) input {
  width: 35%;
}

.prompt {
  font-size: 12px;
  margin-top: 30rpx;
  text-align: center;
  color: #999;
}

.submit {
  width: 86%;
  background-color: rgb(255, 76, 48);
  color: white;
  margin-top: 20rpx;
  font-size: 30rpx;
  padding: 1px 0;
}

.inputView picker {
  /* border-bottom: 1px solid #666; */
  width: 70%;
}

.prompt {
  font-size: 12px;
  margin-top: 30rpx;
  text-align: center;
  color: #999;
}

.pltext {
  font-size: 15px;
  /* text-align: center; */
  color: #999;
  font-family: Arial, Helvetica, sans-serif;
}

.choose {
  width: 50%;
  line-height: 30px;
}

.inputView image {
  width: 33.3%;
}

.topImg {
  width: 750rpx;
  height: 300rpx;
}

.bar {
  width: 100%;
  height: 30rpx;
  background-color: rgb(241, 241, 241);
}

.recommendImg {
  width: 100%;
  height: 500rpx;
}

.recommendView {
  box-sizing: border-box;
  padding: 30rpx 20px;
  width: 100%;
  font-size: 12rpx;
  background-color: rgb(241, 241, 241);
}

.recommendViewView {
  padding: 20rpx;
}

.address-box {
  width: 90%;
  background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 655rpx center,
                url(https://cdn.it120.cc/images/weappshop/addr-line.png) no-repeat center bottom;
  background-size: 16rpx auto, 750rpx auto;
  background-color: #fff;
  margin: 0 5%;
}

.add-addres {
  width: 100%;
}

.add-address .title {
  font-size: 28rpx;
  color: #000;
  margin-left: 20rpx;
  background: url(https://cdn.it120.cc/images/weappshop/ico-add-addr.png) no-repeat left center;
  background-size: 60rpx auto;
  padding: 30rpx 0 30rpx 90rpx;
}

.show-address {
  width: 664rpx;
  box-sizing: border-box;
  padding-left: 100rpx;
  background: url(https://cdn.it120.cc/images/weappshop/ico-addr.png) no-repeat 30rpx 35rpx;
  background-size: 30rpx auto;
}

.show-address .name-tel {
  font-size: 28rpx;
  color: #000;
  padding: 30rpx 0 20rpx 0;
}

.show-address .addr-text {
  font-size: 24rpx;
  color: #888;
  padding-bottom: 34rpx;
  line-height: 36rpx;
}
